# ===================================================================
# Config Directory Protection
# ===================================================================
# Deny all access to configuration files containing sensitive data
# ===================================================================

# Deny access to this entire directory
Order Deny,Allow
Deny from all

# Prevent directory listing
Options -Indexes

# Additional protection for PHP config files
<FilesMatch "\.php$">
    Order Allow,Deny
    Deny from all
</FilesMatch>
